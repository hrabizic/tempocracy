{
	"compilerOptions": {
		"target": "es5",
		"allowJs": true,
		"skipLibCheck": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"noImplicitAny": true,
		"jsx": "preserve",
		"lib": ["es5", "es6", "dom"]
	},
	"include": ["src"]
}
